#!/usr/bin/make -f
export DH_VIRTUALENV_INSTALL_ROOT=/usr/share/drakvuf-sandbox

%:
	dh $@ --with python-virtualenv

build:
	$(MAKE) -C drakrun/utilities/draksetup/tools
	cp /opt/xtf/tests/example/test-hvm64-example drakrun/utilities/draksetup/tools/test-hvm64-example

override_dh_virtualenv:
	dh_virtualenv --python ${PYTHON_BIN}

# Silence libvmi.so info errors
override_dh_shlibdeps:
	dh_shlibdeps --dpkg-shlibdeps-params=--ignore-missing-info
